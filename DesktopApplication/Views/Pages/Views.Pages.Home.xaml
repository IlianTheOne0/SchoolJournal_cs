<UserControl x:Class="DesktopApplication.Views.Pages.PageHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApplication.Views.Pages"
        xmlns:userControls="clr-namespace:DesktopApplication.Views.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:DesktopApplication.Services.Converters"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl x:Name="SidebarHost" Grid.Column="0"/>
        
        <Grid Grid.Column="1" Background="{StaticResource MaterialDesignDarkSeparatorBackground}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon 
                    Kind="InformationOutline" 
                    Width="100" Height="100"
                    HorizontalAlignment="Center"
                    Foreground="{StaticResource MaterialDesignShadowBrush}"/>
                <TextBlock 
                    Text="Nothing to show" 
                    FontSize="24" FontFamily="{StaticResource Roboto}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>