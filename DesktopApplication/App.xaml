<Application x:Class="DesktopApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:DesktopApplication.Services.Converters.BooleanToVisibility">
    <Application.Resources>
        <ResourceDictionary>
            <converters:ServicesConvertersBooleanToVisibility x:Key="BooleanToVisibilityConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Assets/Fonts/Fonts.Roboto.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Assets/Fonts/Fonts.Caveat.xaml"/>
                
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#0b0b0b" SecondaryColor="#e6e6e6"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesign3.defaults.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>